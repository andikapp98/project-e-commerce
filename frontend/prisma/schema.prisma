// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Product model for e-commerce shoes
model Product {
  id          String   @id @default(cuid())
  name        String   @db.VarChar(255)
  description String?
  price       Decimal  @db.Decimal(10, 2)
  category    String   @db.VarChar(100) // "business", "sport", "casual"
  brand       String   @db.VarChar(100)
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  variants    Variant[]
  images      String[] @db.VarChar(255)
}

// Product variant (size, color, width)
model Variant {
  id          String   @id @default(cuid())
  product     Product  @relation(fields: [productId], references: [id])
  productId   String
  sizeUs      Decimal  @db.Decimal(4, 1)
  sizeEu      Decimal  @db.Decimal(4, 1)
  sizeUk      Decimal  @db.Decimal(4, 1)
  color       String   @db.VarChar(50)
  width       String   @db.VarChar(20) // "narrow", "regular", "wide"
  stock       Int      @default(0)
  orderItems  OrderItem[]
}

// Order model
model Order {
  id          String   @id @default(cuid())
  customerName String  @db.VarChar(255)
  customerEmail String @db.VarChar(255)
  total       Decimal  @db.Decimal(10, 2)
  status      String   @db.VarChar(50) @default("pending")
  paymentId   String?  @db.VarChar(255)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderItems  OrderItem[]
}

// Order item model
model OrderItem {
  id          String   @id @default(cuid())
  order       Order    @relation(fields: [orderId], references: [id])
  orderId     String
  variant     Variant  @relation(fields: [variantId], references: [id])
  variantId   String
  quantity    Int      @default(1)
  price       Decimal  @db.Decimal(10, 2)
}